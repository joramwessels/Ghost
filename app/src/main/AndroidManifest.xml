<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="prog.nl.ghost" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="nl.prog.ghost.gui.WelcomeGUI"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nl.prog.ghost.gui.GameGUI"
            android:label="@string/title_activity_game_gui" >
        </activity>
        <activity
            android:name="nl.prog.ghost.gui.FinishGUI"
            android:label="@string/title_activity_finish_gui" >
        </activity>
    </application>

</manifest>
